@{
}
@using (Html.BeginForm("Create", "Contacts", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="mb-3">
        @Html.LabelFor(m => m.Contact_Name)
        @Html.TextBoxFor(m => m.Contact_Name)
        @Html.ValidationMessageFor(m=>m.Contact_Name)
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.Contact_Number)
        @Html.TextBoxFor(m => m.Contact_Number)
        @Html.ValidationMessageFor(m=>m.Contact_Number)
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.Group_Name)
        @Html.TextBoxFor(m => m.Group_Name)
        @Html.ValidationMessageFor(m=>m.Group_Name)
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.Hire_Date)
        @Html.TextBoxFor(m => m.Hire_Date)
        @Html.ValidationMessageFor(m=>m.Hire_Date)
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.Birthday)
        @Html.TextBoxFor(m => m.Birthday)
        @Html.ValidationMessageFor(m=>m.Birthday)
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
}
